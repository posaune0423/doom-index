{
  "name": "doom-index",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "build:cloudflare": "opennextjs-cloudflare build",
    "start": "next start --webpack",
    "lint": "eslint",
    "format": "prettier --write .",
    "test": "bun test --env-file=.dev.vars --preload=./tests/preload.ts",
    "test:unit": "bun test --env-file=.dev.vars --grep 'unit' --preload=./tests/preload.ts",
    "test:integration": "bun test --env-file=.dev.vars --grep 'integration' --preload=./tests/preload.ts",
    "typecheck": "tsgo --noEmit",
    "cf-typegen": "wrangler types src/types/worker-configuration.d.ts --env-interface CloudflareBindings",
    "generate": "bun --env-file=.dev.vars scripts/generate.ts",
    "watch-cron": "bun scripts/watch-cron.ts",
    "preview": "opennextjs-cloudflare preview --test-scheduled",
    "upload": "opennextjs-cloudflare upload",
    "deploy": "opennextjs-cloudflare deploy"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.65",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.4.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.90.7",
    "ai": "^5.0.92",
    "neverthrow": "^7.2.0",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "three": "^0.181.1",
    "use-haptic": "^1.1.11",
    "use-sound": "^5.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251111.0",
    "@happy-dom/global-registrator": "^20.0.10",
    "@opennextjs/cloudflare": "^1.12.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.3.2",
    "@types/node": "^20.19.24",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/three": "^0.181.0",
    "@typescript/native-preview": "^7.0.0-dev.20251111.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.1",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "wrangler": "^4.46.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "printWidth": 120,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "tabWidth": 2,
    "useTabs": false
  },
  "packageManager": "bun@1.3.1"
}
