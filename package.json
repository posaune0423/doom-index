{
  "name": "doom-index",
  "version": "1.0.0",
  "description": "A decentralized archive of financial emotions. AI generates one painting every minute, translating the collective psychology of 8 pump.fun tokens into visual art.",
  "private": false,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:cf": "opennextjs-cloudflare build",
    "start": "next start",
    "lint": "eslint",
    "format": "prettier --write .",
    "test": "bun test --env-file=.dev.vars --preload=./tests/preload.ts",
    "test:unit": "bun test --env-file=.dev.vars --grep 'unit' --preload=./tests/preload.ts",
    "test:integration": "bun test --env-file=.dev.vars --grep 'integration' --preload=./tests/preload.ts",
    "typecheck": "tsgo --noEmit",
    "cf-typegen": "wrangler types src/types/worker-configuration.d.ts --env-interface CloudflareBindings",
    "generate": "bun --env-file=.dev.vars scripts/generate.ts",
    "watch-cron": "bun scripts/watch-cron.ts",
    "truncate-r2": "bun --env-file=.dev.vars scripts/truncate-r2.ts",
    "truncate-r2:dry-run": "bun --env-file=.dev.vars scripts/truncate-r2.ts --dry-run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun --env-file=.dev.vars drizzle-kit migrate",
    "db:migrate:prod": "NODE_ENV=production bun run db:migrate",
    "db:push": "bun --env-file=.dev.vars drizzle-kit push",
    "db:push:prod": "NODE_ENV=production bun run db:push",
    "db:studio": "drizzle-kit studio",
    "preview": "opennextjs-cloudflare preview --env dev --test-scheduled",
    "upload": "opennextjs-cloudflare upload",
    "deploy": "opennextjs-cloudflare deploy"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.67",
    "@aws-sdk/client-s3": "^3.932.0",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^16.0.3",
    "@next/third-parties": "^16.0.3",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.90.9",
    "@trpc/client": "^11.7.1",
    "@trpc/next": "^11.7.1",
    "@trpc/react-query": "^11.7.1",
    "@trpc/server": "^11.7.1",
    "@trpc/tanstack-react-query": "^11.7.1",
    "ai": "^5.0.93",
    "drizzle-orm": "^0.44.7",
    "neverthrow": "^7.2.0",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "remark-gfm": "^4.0.1",
    "three": "^0.181.1",
    "use-haptic": "^1.1.13",
    "use-sound": "^5.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251115.0",
    "@happy-dom/global-registrator": "^20.0.10",
    "@opennextjs/cloudflare": "^1.12.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.3.2",
    "@types/node": "^20.19.25",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.181.0",
    "@typescript/native-preview": "^7.0.0-dev.20251115.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "better-sqlite3": "^12.4.1",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.1",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "wrangler": "^4.48.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "printWidth": 120,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "tabWidth": 2,
    "useTabs": false
  },
  "packageManager": "bun@1.3.2"
}
